{
  "name": "extrahand-notification-service",
  "version": "1.0.0",
  "description": "Notification Service for ExtraHand Platform - Handles push notifications, preferences, and FCM token management",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "prod": "NODE_ENV=production node dist/server.js",
